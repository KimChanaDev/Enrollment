<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
</head>
<body>
    <%- include('../layout.ejs') %>
    <div class="container">
        <h2 align="center">ลงทะเบียน</h2>

        <% if(locals.errors) { %>
            <ul class="alert alert-danger">
                <% Object.values(errors).forEach(function(err){ %>
                    <li><%= err.msg %></li>
                <% }) %>
            </ul>
        <% } %>

        <form class="form-group" action="/user/register" method="post">
            <div class="form-group">
                <label for="">ผู้เรียน / ผู้สอน</label>
                <select name="type" class="form-control">
                    <option value="student">Student</option>
                    <option value="instructor">Instructor</option>
                </select>
            </div>
            <div>
                <div class="form-group">
                    <label for="">Username</label>
                    <input type="text" name="username" class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" name="password" class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Email</label>
                    <input type="text" name="email" class="form-control">
                </div>
                <div class="form-group">
                    <label for="">First Name</label>
                    <input type="text" name="fname" class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Last Name</label>
                    <input type="text" name="lname" class="form-control">
                </div>
            </div>
            <input type="submit" value="ลงทะเบียน" class="btn btn-success">
        </form>
    </div>
</body>
</html>